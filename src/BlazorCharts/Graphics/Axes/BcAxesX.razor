@namespace BlazorCharts
@inherits ElementAxes<TData>
@typeparam TData

@if (Chart.IsInit)
{
    <g class="bc-axes-x" transform="translate(@Rect.LT.ToPoint())">

        <line x1="0" y1="0" x2="@Rect.W" y2="0" stroke="#767676" stroke-width="1" />

        @foreach (var category in AxisGroup.Categorys)
        {
            @*var x = (int)((double)Rect.W / (AxisGroup.CategoryValues.Count + 1) * (i+1));*@

            <text>
                <text font-size="@FontSize" fill="#767676" x="@(AxisGroup.CategoryPositions[category])" y="FontSize"
                      transform="translate(0,@(FontSize))" text-anchor="@TextAnchor.Middle.ToDescription()">@category</text>
            </text>

        }
    </g>

    @*<polyline points="@Rect.ToPoints()" style="fill:rgb(0 128 0 / 0.10);" />*@
}
