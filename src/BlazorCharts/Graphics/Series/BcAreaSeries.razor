@namespace BlazorCharts
@inherits ElementSeries<TData>
@typeparam TData

@if (Chart.IsInit)
{
    <g class="bc-line-series" transform="translate(@Rect.LT.ToPoint())">

        @{
            var color = (SeriesData.Groups.First() ?? "Area").RandomColor().ToHtml();
            var colorDeepen = (SeriesData.Groups.First() ?? "Area").RandomColor().Deepen().ToHtml();
            List<Point> points = new List<Point>();


            @*起始点*@
            @*if (Chart.CategoryDatas.Count > 0)
            {
                var first = Chart.CategoryDatas.First();
                points.Add(new Point((int)(Chart.BcAxisGroup.AxesX.Rect.W * first.AxesZeroRatio), Rect.H));
            }*@

            @*连线*@
            @*foreach (var category in Chart.CategoryDatas)
            {
                var value = category.SeriesValues[Group];
                points.Add(new Point((int)(Chart.BcAxisGroup.AxesX.Rect.W * category.AxesZeroRatio), Rect.H - Chart.BcAxisGroup.AxesYLeft.GetHeightByValue(value)));
            }*@


            @*结束点*@
            @*if (Chart.CategoryDatas.Count > 1)
            {
                var end = Chart.CategoryDatas.Last();
                points.Add(new Point((int)(Chart.BcAxisGroup.AxesX.Rect.W * end.AxesZeroRatio), Rect.H));
            }*@

        }

        <polygon points="@points.ToPoints()" stroke="@color" stroke-width=0 fill="@color" />

    </g>

}