@page "/AxesX"

<Card Style="width:100%;" Title="基本使用">
    <ChildContent>
        <div class="card">
            <div class="chart">
                <BcChart @ref="@bcChart" Height="400" Width="600" Data="DemoData.Githubs" CategoryField="x=>x.Year.ToString()">
                    <BcTitle Title="X轴" TData="Github"></BcTitle>
                    <BcAxesX TData="Github"  GridLineMajor="@gridLineMajor" DistanceAxis="@distanceAxis" LabelPosition="@labelPosition"  ></BcAxesX>
                    <BcBarSeries TData="Github" ValueFunc="x=>x.Sum(y=>y.View)" Group="View" Caption="访问"></BcBarSeries>
                    <BcBarSeries TData="Github" ValueFunc="x=>x.Sum(y=>y.Start)" Group="Start" Caption="点赞"></BcBarSeries>
                    <BcLineSeries TData="Github" ValueFunc="x=>x.Sum(y=>y.Fork)" Group="Fork" Caption="分叉"></BcLineSeries>
                    
                </BcChart>
            </div>
            <div class="prop">
                <Divider Text="与坐标轴的距离" Orientation="left"></Divider>
                <InputNumber @bind-Value="@distanceAxis"></InputNumber>

                <Divider Text="标签位置" Orientation="left"></Divider>
                <RadioGroup @bind-Value="@labelPosition">
                    <Radio Value="AxesLabelPosition.Axis">轴旁</Radio>
                    <Radio Value="AxesLabelPosition.None">无</Radio>
                </RadioGroup>

                <Divider Text="网格线" Orientation="left"></Divider>
                <Checkbox @bind-Value="@gridLineMajor">主要</Checkbox>

                <Divider></Divider>
                <Button Type="primary" OnClick="OnClick">应用</Button>
            </div>
        </div>
    </ChildContent>
</Card>

@code{

    bool gridLineMajor = false;

    int? distanceAxis;

    AxesLabelPosition labelPosition=AxesLabelPosition.Axis;

    BcChart<Github> bcChart;

    public void OnClick()
    {
        bcChart.Refresh();
    }

}
